<% @posts.order('CREATED_AT DESC').each do |post| %>
<%= render 'taken', post: post %>
  <%= link_to controller: :posts, action: :show, id: post.id do %>
    <div class="card text-center">
      <div class="card-header">
        <%= post.category.name %>
      </div>
      <div class="card-block">
        <div>
        <% if (Time.now.to_i > post.expiration.to_i) == true %>
        <p> expired </p>
        <% end %>
        </div>
        <div>
          <span><%= image_tag post.image, class: "card-image" %></span>
        </div>
        <h4 class="card-title"><%= post.title %></h4>
        <p class="card-text"><%= post.description %></p>
      </div>
      <div class="card-footer text-muted">
        <%= post.created_at.to_formatted_s(:long) %>
      </div>
      <% if post.comments.count > 0 %>
      <h1><%= pluralize(post.comments.count, 'Comment') %></h1>
      <% end %>
  </div>
  <br>
  <% end %>
  <%= button_to "Claim!", controller: :claims, method: :post, action: :create, data: { post_id: post.id, claimer_id: current_user.id, user_id: post.user_id} %>
<% end %>


