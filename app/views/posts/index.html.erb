
<div class="header-section">
  <div class="container">
     <div class="new-post-form">
        <%= render 'form', post: @post %>
    </div>
  </div>
</div>
<br>
<button type="button" id="new-post-button" class="btn btn-default">Add new post!</button>
<p id="notice"><%= notice %></p>
  <ul class="nav nav-tabs">
    <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Order by<span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%= link_to "View All", controller: "posts", category_id: params[:category_id] %></li>
        <li><%= link_to "Available posts", controller: "posts", order: "available", category_id: params[:category_id] %></li>
      </ul>
    </li>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%= link_to "View all", controller: "posts", order: params[:order] %></li>
        <% Category.all.each do |category| %>
          <li><%= link_to category.name, controller: "posts", category_id: category.id, order: params[:order] %></li>
        <% end %>
      </ul>
    </li>
  </ul>

<div class="tab-content">
<br>
  <div id="default-post" class="tab-pane fade in active">
    <%= render 'post' %>
    </div>
  </div>
</div>


