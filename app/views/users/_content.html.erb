<ul class="nav nav-tabs">
  <% if current_user == @user %>
  <li class="active"><a data-toggle="tab" href="#home">Posts</a></li>
  <li><a data-toggle="tab" href="#menu1">Comment</a></li>
  <li><a data-toggle="tab" href="#menu2">Notifications</a></li>
  <li><a data-toggle="tab" href="#menu3">Inbox</a></li>
  <% else %>
  <li class="active"><a data-toggle="tab" href="#home">Posts</a></li>
  <li><a data-toggle="tab" href="#menu1">Comment</a></li>
  <% end %>
</ul>

<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <%= render 'posts' %>
    </div>
  <div id="menu1" class="tab-pane fade">

    <div id="login-overlay" class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Leave a Comment</h4>
          <%= render 'comments/form' %>
        </div>

        <div class="modal-body">
          <div class="modal-header">
            <%= render 'comments/comments' %>
          </div>
        </div>
      </div>
    </div>

    <h3>Comment</h3>

    <%= render "comments/comments" %>
    <%= render "comments/form" %>
  </div>
  <div id="menu2" class="tab-pane fade notification-container">
    <h3>Notifications</h3>
      <div id="notif">
      </div>
  </div>
  <div id="menu3" class="tab-pane fade">
    <h3>Inbox</h3>
    <div class="container">
    <div class="row">
    <div class="col-xs-4">
    <ul class="friend-list">
      <% @chatroom.each do |chatroom| %>
              <% if current_user.id == chatroom.owner_id %>
              <li class="chat-log well">
                <%= link_to "#{(User.find(chatroom.client_id)).name}", controller: :chatrooms, action: :show, id: chatroom.id, remote: true %>
                  <%= image_tag "#{(User.find(chatroom.client_id)).image}", class: "img-circle friend-image" %>
                    <div>
                      <%= chatroom.messages.last.content %>
                    </div>
              </li>
              <% else %>
              <li class="chat-log well">
                <%= link_to "#{(User.find(chatroom.owner_id)).name}", controller: :chatrooms, action: :show, id: chatroom.id, remote:  true %>
                  <%= image_tag "#{(User.find(chatroom.owner_id)).image}", class: "img-circle friend-image" %>
                    <div>
                      <%= chatroom.messages.last.content %>
                    </div>
              </li>
              <% end %>
      <% end %>
      </ul>
    </div>
      <div class="col-xs-7">
      <div class="message-container chat-message" id="inbox">
      </div>
      </div>
    </div>
    </div>
  </div>
</div>
