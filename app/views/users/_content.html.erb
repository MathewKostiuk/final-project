<br>
<ul class="nav nav-tabs">
  <% if current_user == @user %>
  <li class="active"><a data-toggle="tab" href="#home">Posts</a></li>
  <li><a data-toggle="tab" href="#menu1">Comment</a></li>
  <li><a data-toggle="tab" href="#menu2">Notifications</a></li>
  <li><a data-toggle="tab" href="#menu3">Inbox</a></li>
  <% else %>
  <li class="active"><a data-toggle="tab" href="#home">Posts</a></li>
  <li><a data-toggle="tab" href="#menu1">Comment</a></li>
  <% end %>
</ul>

<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <%= render 'posts' %>
    </div>
  <div id="menu1" class="tab-pane fade">

    <div id="login-overlay" class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="myModalLabel">Leave a Comment</h4>
          <%= render 'comments/form' %>
        </div>
        <div class="modal-body">
          <div class="modal-header">
            <%= render 'comments/comments' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div id="menu2" class="tab-pane fade notification-container">
      <div id="notif">
      </div>
  </div>
  <div id="menu3" class="tab-pane fade">
  <br>
    <div class="container">
    <div class="row">
    <div class="col-xs-4">
      <% @chatroom.each do |chatroom| %>
          <div class="message-recipient">
              <% if current_user.id == chatroom.owner_id %>
              <li class="chat"><%= link_to "#{(User.find(chatroom.client_id)).name}", controller: :chatrooms, action: :show, id: chatroom.id, remote:  true %></li>
                  <%= image_tag "#{(User.find(chatroom.client_id)).image}", class: "img-circle" %>
              <% else %>
              <li class="chat"><%= link_to "#{(User.find(chatroom.owner_id)).name}", controller: :chatrooms, action: :show, id: chatroom.id, remote:  true %></li>
                  <%= image_tag "#{(User.find(chatroom.owner_id)).image}", class: "img-circle" %>
              <% end %>
          </div>
        <% end %>
    </div>
      <div class="col-xs-8">
      <div id="inbox">
        <li class="chat"><%= render partial: 'chatrooms/messagebar', locals: {message: @message, chatroom: @chatroom[0]}%></li>
      </div>
      </div>
    </div>
    </div>
  </div>
</div>
