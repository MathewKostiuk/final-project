<ul class="nav nav-tabs">
  <% if current_user == @user %>
  <li class="active"><a data-toggle="tab" href="#home">Posts</a></li>
  <li><a data-toggle="tab" href="#menu1">Comment</a></li>
  <li><a data-toggle="tab" href="#menu2">Notifications</a></li>
  <li><a data-toggle="tab" href="#menu3">Inbox</a></li>
  <% else %>
  <li class="active"><a data-toggle="tab" href="#home">Posts</a></li>
  <li><a data-toggle="tab" href="#menu1">Comment</a></li>
  <% end %>
</ul>

<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
      <%= render 'posts' %>
    </div>
  <div id="menu1" class="tab-pane fade">
    <h3>Comment</h3>
      <%= render "comments/comments" %>
      <%= render "comments/form" %>
  </div>
  <div id="menu2" class="tab-pane fade notification-container">
    <h3>Notifications</h3>
      <div id="notif">
      </div>
  </div>
  <div id="menu3" class="tab-pane fade">
    <h3>Inbox</h3>
      <div class="container inbox">
        <% @chatroom.each do |chatroom| %>
            <div class="message-recipient">
              <a data-toggle="collapse" href="#chatroom-<%= chatroom.id%>">
                <% if current_user.id == chatroom.owner_id %>
                  <%= (User.find(chatroom.client_id)).name %>
                <% else %>
                  <%= (User.find(chatroom.owner_id)).name %>
                <% end %>
              </a>
            </div>
            <div class="tab-pane fade message-container" id='chatroom-<%= chatroom.id%>'>
              <%= render partial: 'chatrooms/messagebar', locals: {message: @message, chatroom: chatroom}%>
            </div>
          <% end %>
      </div>
  </div>
</div>