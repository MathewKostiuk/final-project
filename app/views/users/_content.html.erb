<ul class="nav nav-tabs">
  <% if !current_user %>
  <li class="active"><a data-toggle="tab" href="#home">Posts</a></li>
  <% else %>
  <li class="active"><a data-toggle="tab" href="#home">Posts</a></li>
  <li><a data-toggle="tab" href="#menu1">Inbox</a></li>
  <li><a data-toggle="tab" href="#menu2">Notifications</a></li>
  <li><a data-toggle="tab" href="#menu3">Messages</a></li>
  <% end %>
</ul>

<div class="tab-content">
  <div id="home" class="tab-pane fade in active">
    <h3>Posts</h3>
      <% @posts.each do |post| %>
      <%= link_to controller: :posts, action: :show, id: post.id do %>
        <div class="card text-center">
          <div class="card-header">
            <%= post.category.name %>
          </div>
          <div class="card-block">
            <div>
              <span><%= image_tag post.image, class: "card-image" %></span>
            </div>
            <h4 class="card-title"><%= post.title %></h4>
            <p class="card-text"><%= post.description %></p>
            <a href="#" class="btn btn-primary">Claim!</a>
          </div>
          <div class="card-footer text-muted">
            <%= post.created_at.to_formatted_s(:long) %>
          </div>
        </div>
        <br>
        <% end %>
        <% end %>
    </div>
  <div id="menu1" class="tab-pane fade">
    <h3>Inbox</h3>
    <p>Some content in menu 1.</p>
  </div>
  <div id="menu2" class="tab-pane fade">
    <h3>Notifications</h3>
    <p>Some content in menu 2.</p>
  </div>
  <div id="menu3" class="tab-pane fade">
    <h3>Messages</h3>
    <p>Some content in menu 2.</p>
  </div>
</div>